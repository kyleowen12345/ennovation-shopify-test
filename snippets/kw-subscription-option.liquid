{%- comment -%}
  Renders a subscription tier radio option.

  Params:
    - name, detail, price: strings
    - active: boolean
    - save_badge: text (optional)
    - free_shipping: boolean
{%- endcomment -%}

<div class="kw-sub-option{% if active %} kw-sub-option--active{% endif %}" data-sub-option>
  <div class="kw-sub-option__radio"></div>
  <div class="kw-sub-option__info">
    <div class="kw-sub-option__name">{{ name }}</div>
    {% if detail != blank %}
      <div class="kw-sub-option__detail">{{ detail }}</div>
    {% endif %}
    <div class="kw-sub-option__badges">
      {% if save_badge != blank %}
        <svg class="kw-sub-option__badge-img save" height="22" viewBox="0 0 120 22" fill="none" xmlns="http://www.w3.org/2000/svg">
          <path d="M0 0H80C87 0 94 2 100 5.5C103 7.3 106 9.7 108 12.5L112 17.5L120 21.2H17C16.2 21.2 15.5 20.7 15.2 20L15 19.6C12.4 13.2 8.4 7.5 3.3 2.9L0 0Z" fill="#D9A845"/>
          <text x="12" y="15" fill="#fff" font-family="Public Sans, sans-serif" font-size="10" font-weight="700">{{ save_badge }}</text>
        </svg>
      {% endif %}
      {% if free_shipping %}
        <div class="kw-sub-option__free-shipping">
        <img src="{{ 'free-shipping-icon.svg' | asset_url }}" alt="Free Shipping" width="100%" height="100%" class="kw-sub-option__badge-img free-shipping" loading="lazy">
        </div>
      {% endif %}
    </div>
  </div>
  <div class="kw-sub-option__price">{{ price }}</div>
</div>
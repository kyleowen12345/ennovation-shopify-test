{%- comment -%}
  Renders a testimonial with photo, product image, quote, name, and title.

  Usage:
    {% render 'kw-testimonial-card',
      photo: block.settings.photo,
      product_photo: block.settings.product_photo,
      quote: block.settings.quote,
      name: block.settings.name,
      title: block.settings.title
    %}

  Params:
    - photo: image object
    - product_photo: image object
    - quote: string
    - name: string
    - title: string
{%- endcomment -%}

<div class="kw-testimonial">
  <div class="kw-testimonial__photos">
    <div class="kw-testimonial__photo-frame">
      {% if photo != blank %}
        <img
          src="{{ photo | image_url: width: 400 }}"
          alt="{{ name }}"
          class="kw-testimonial__photo"
          loading="lazy"
        >
      {% endif %}
      <span class="kw-testimonial__diamond kw-testimonial__diamond--top"></span>
      <span class="kw-testimonial__diamond kw-testimonial__diamond--bottom"></span>
    </div>
    {% if product_photo != blank %}
      <div class="kw-testimonial__product">
        <img
          src="{{ product_photo | image_url: width: 200 }}"
          alt="KeeWee product"
          class="kw-testimonial__product-img"
          loading="lazy"
        >
      </div>
    {% endif %}
  </div>

  <div class="kw-testimonial__content">
    {% if quote != blank %}
      <blockquote class="kw-testimonial__quote">
        &ldquo;{{ quote }}&rdquo;
      </blockquote>
    {% endif %}
    {% if name != blank %}
      <p class="kw-testimonial__name">{{ name }}</p>
    {% endif %}
    {% if title != blank %}
      <p class="kw-testimonial__title">{{ title }}</p>
    {% endif %}
  </div>
</div>

{%- comment -%}
  Renders a social media link with icon and handle.

  Usage:
    {% render 'kw-social-link', platform: 'instagram', handle: 'kewee', link: 'https://instagram.com/kewee' %}

  Params:
    - platform: 'instagram' or 'facebook'
    - handle: display text
    - link: full URL
{%- endcomment -%}

{% if handle != blank %}
  <a href="{{ link | default: '#' }}" class="kw-social-link" target="_blank" rel="noopener">
    {% if platform == 'instagram' %}
      <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
        <rect x="2" y="2" width="20" height="20" rx="5"/>
        <circle cx="12" cy="12" r="5"/>
        <circle cx="17.5" cy="6.5" r="1.5" fill="currentColor" stroke="none"/>
      </svg>
    {% elsif platform == 'facebook' %}
      <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
        <path d="M18 2h-3a5 5 0 00-5 5v3H7v4h3v8h4v-8h3l1-4h-4V7a1 1 0 011-1h3z"/>
      </svg>
    {% endif %}
    {{ handle }}
  </a>
{% endif %}

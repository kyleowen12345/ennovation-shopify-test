{{ 'kw-as-seen-in.css' | asset_url | stylesheet_tag }}

<section
  class="kw-as-seen-in"
  style="
    {% if section.settings.bg_color != blank %}background-color: {{ section.settings.bg_color }};{% endif %}
    padding-top: {{ section.settings.padding_top }}px;
    padding-bottom: {{ section.settings.padding_bottom }}px;
  "
  {{ section.shopify_attributes }}
>
  {%- comment -%} Optional background image {%- endcomment -%}
  {% if section.settings.bg_image != blank %}
    <img
      src="{{ section.settings.bg_image | image_url: width: 1920 }}"
      alt=""
      class="kw-as-seen-in__bg"
      loading="lazy"
    >
  {% endif %}

  <div class="kw-as-seen-in__inner">
    {% if section.settings.heading != blank %}
      <p class="kw-as-seen-in__heading">{{ section.settings.heading }}</p>
    {% endif %}

    {%- comment -%} Marquee wrapper â€” duplicates logos for seamless loop {%- endcomment -%}
    <div class="kw-as-seen-in__marquee" style="--marquee-speed: {{ section.settings.scroll_speed }}s;">
      <div class="kw-as-seen-in__track">
        {%- comment -%} First set of logos {%- endcomment -%}
        {% for block in section.blocks %}
          <div class="kw-as-seen-in__slide" {{ block.shopify_attributes }}>
            {% render 'kw-logo-item',
              logo: block.settings.logo,
              alt_text: block.settings.alt_text,
              link: block.settings.link
            %}
          </div>
        {% endfor %}

        {%- comment -%} Duplicate set for seamless loop {%- endcomment -%}
        {% for block in section.blocks %}
          <div class="kw-as-seen-in__slide" aria-hidden="true">
            {% render 'kw-logo-item',
              logo: block.settings.logo,
              alt_text: block.settings.alt_text,
              link: block.settings.link
            %}
          </div>
        {% endfor %}
      </div>
    </div>
  </div>
</section>

{% schema %}
{
  "name": "KW As Seen In",
  "tag": "section",
  "class": "kw-as-seen-in-section",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "As Seen In"
    },
    {
      "type": "header",
      "content": "Background"
    },
    {
      "type": "color",
      "id": "bg_color",
      "label": "Background color",
      "default": "#ffffff"
    },
    {
      "type": "image_picker",
      "id": "bg_image",
      "label": "Background image (optional)"
    },
    {
      "type": "header",
      "content": "Carousel"
    },
    {
      "type": "range",
      "id": "scroll_speed",
      "label": "Scroll speed (seconds)",
      "min": 10,
      "max": 60,
      "step": 5,
      "default": 20,
      "unit": "s"
    },
    {
      "type": "header",
      "content": "Spacing"
    },
    {
      "type": "range",
      "id": "logo_height",
      "label": "Logo height (px)",
      "min": 14,
      "max": 40,
      "step": 2,
      "default": 24,
      "unit": "px"
    },
    {
      "type": "range",
      "id": "padding_top",
      "label": "Top padding",
      "min": 0,
      "max": 60,
      "step": 4,
      "default": 24,
      "unit": "px"
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "label": "Bottom padding",
      "min": 0,
      "max": 60,
      "step": 4,
      "default": 24,
      "unit": "px"
    }
  ],
  "blocks": [
    {
      "type": "logo",
      "name": "Press Logo",
      "settings": [
        {
          "type": "image_picker",
          "id": "logo",
          "label": "Logo image"
        },
        {
          "type": "text",
          "id": "alt_text",
          "label": "Alt text",
          "default": "Press logo"
        },
        {
          "type": "url",
          "id": "link",
          "label": "Link (optional)"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "KW As Seen In",
      "blocks": [
        { "type": "logo", "settings": { "alt_text": "Allure" } },
        { "type": "logo", "settings": { "alt_text": "NBC" } },
        { "type": "logo", "settings": { "alt_text": "FOX" } },
        { "type": "logo", "settings": { "alt_text": "Vogue" } },
        { "type": "logo", "settings": { "alt_text": "FOX" } },
        { "type": "logo", "settings": { "alt_text": "Allure" } },
        { "type": "logo", "settings": { "alt_text": "Better Homes & Gardens" } },
        { "type": "logo", "settings": { "alt_text": "Vogue" } }
      ]
    }
  ]
}
{% endschema %}
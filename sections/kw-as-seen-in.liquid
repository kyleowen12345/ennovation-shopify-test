{{ 'kw-as-seen-in.css' | asset_url | stylesheet_tag }}

<section class="kw-as-seen-in" {{ section.shopify_attributes }}>
  {% if section.settings.heading != blank %}
    <p class="kw-as-seen-in__heading">{{ section.settings.heading }}</p>
  {% endif %}

  <div class="kw-as-seen-in__logos">
    {%- comment -%} Each logo is a theme block â€” can add, remove, reorder from customizer {%- endcomment -%}
    {% for block in section.blocks %}
      <div {{ block.shopify_attributes }}>
        {%- comment -%} Using kw-logo-item snippet for reusable logo rendering {%- endcomment -%}
        {% render 'kw-logo-item',
          logo: block.settings.logo,
          alt_text: block.settings.alt_text,
          link: block.settings.link
        %}
      </div>
    {% endfor %}
  </div>
</section>

{% schema %}
{
  "name": "KW As Seen In",
  "tag": "section",
  "class": "kw-as-seen-in-section",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "As Seen In"
    },
    {
      "type": "range",
      "id": "logo_height",
      "label": "Logo height (px)",
      "min": 14,
      "max": 40,
      "step": 2,
      "default": 24,
      "unit": "px"
    },
    {
      "type": "range",
      "id": "padding_top",
      "label": "Top padding",
      "min": 0,
      "max": 60,
      "step": 4,
      "default": 24,
      "unit": "px"
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "label": "Bottom padding",
      "min": 0,
      "max": 60,
      "step": 4,
      "default": 24,
      "unit": "px"
    }
  ],
  "blocks": [
    {
      "type": "logo",
      "name": "Press Logo",
      "settings": [
        {
          "type": "image_picker",
          "id": "logo",
          "label": "Logo image"
        },
        {
          "type": "text",
          "id": "alt_text",
          "label": "Alt text",
          "default": "Press logo"
        },
        {
          "type": "url",
          "id": "link",
          "label": "Link (optional)"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "KW As Seen In",
      "blocks": [
        { "type": "logo", "settings": { "alt_text": "Allure" } },
        { "type": "logo", "settings": { "alt_text": "NBC" } },
        { "type": "logo", "settings": { "alt_text": "FOX" } },
        { "type": "logo", "settings": { "alt_text": "Vogue" } },
        { "type": "logo", "settings": { "alt_text": "FOX" } },
        { "type": "logo", "settings": { "alt_text": "Allure" } },
        { "type": "logo", "settings": { "alt_text": "Better Homes & Gardens" } },
        { "type": "logo", "settings": { "alt_text": "Vogue" } }
      ]
    }
  ]
}
{% endschema %}
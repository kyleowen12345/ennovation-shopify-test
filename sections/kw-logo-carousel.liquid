{{ 'kw-logo-carousel.css' | asset_url | stylesheet_tag }}

<section
  class="kw-logo-carousel"
  style="
    {% if section.settings.bg_color != blank %}background-color: {{ section.settings.bg_color }};{% endif %}
    padding-top: {{ section.settings.padding_top }}px;
    padding-bottom: {{ section.settings.padding_bottom }}px;
  "
  {{ section.shopify_attributes }}
>
  {% if section.settings.bg_image != blank %}
    <img
      src="{{ section.settings.bg_image | image_url: width: 1920 }}"
      alt=""
      class="kw-logo-carousel__bg"
      loading="lazy"
    >
  {% endif %}

  <div class="kw-logo-carousel__inner">
    {% if section.settings.heading != blank %}
      <p class="kw-logo-carousel__heading">{{ section.settings.heading }}</p>
    {% endif %}

    <div class="kw-logo-carousel__marquee">
      <div class="kw-logo-carousel__track">
        {%- comment -%} Set 1 — uses kw-logo-item snippet per block {%- endcomment -%}
        <div class="kw-logo-carousel__items">
          {% for block in section.blocks %}
            <div {{ block.shopify_attributes }}>
              {% render 'kw-logo-item', logo: block.settings.logo, alt_text: block.settings.alt_text, link: block.settings.link %}
            </div>
          {% endfor %}
        </div>
        {%- comment -%} Set 2 — duplicate for seamless infinite loop {%- endcomment -%}
        <div class="kw-logo-carousel__items" aria-hidden="true">
          {% for block in section.blocks %}
            <div>
              {% render 'kw-logo-item', logo: block.settings.logo, alt_text: block.settings.alt_text, link: block.settings.link %}
            </div>
          {% endfor %}
        </div>
      </div>
    </div>
  </div>
</section>

{% schema %}
{
  "name": "KW Logo Carousel",
  "tag": "section",
  "class": "kw-logo-carousel-section",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "As Seen In"
    },
    {
      "type": "header",
      "content": "Background"
    },
    {
      "type": "color",
      "id": "bg_color",
      "label": "Background color",
      "default": "#ffffff"
    },
    {
      "type": "image_picker",
      "id": "bg_image",
      "label": "Background image (optional)"
    },
    {
      "type": "header",
      "content": "Spacing"
    },
    {
      "type": "range",
      "id": "padding_top",
      "label": "Top padding",
      "min": 0,
      "max": 60,
      "step": 4,
      "default": 24,
      "unit": "px"
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "label": "Bottom padding",
      "min": 0,
      "max": 60,
      "step": 4,
      "default": 24,
      "unit": "px"
    }
  ],
  "blocks": [
    {
      "type": "logo",
      "name": "Logo",
      "settings": [
        {
          "type": "image_picker",
          "id": "logo",
          "label": "Logo image"
        },
        {
          "type": "text",
          "id": "alt_text",
          "label": "Alt text",
          "default": "Press logo"
        },
        {
          "type": "url",
          "id": "link",
          "label": "Link (optional)"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "KW Logo Carousel",
      "blocks": [
        { "type": "logo", "settings": { "alt_text": "Allure" } },
        { "type": "logo", "settings": { "alt_text": "NBC" } },
        { "type": "logo", "settings": { "alt_text": "FOX" } },
        { "type": "logo", "settings": { "alt_text": "Vogue" } },
        { "type": "logo", "settings": { "alt_text": "FOX" } },
        { "type": "logo", "settings": { "alt_text": "Allure" } },
        { "type": "logo", "settings": { "alt_text": "Better Homes & Gardens" } },
        { "type": "logo", "settings": { "alt_text": "Vogue" } }
      ]
    }
  ]
}
{% endschema %}

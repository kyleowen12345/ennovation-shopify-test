{{ 'kw-feature-grid.css' | asset_url | stylesheet_tag }}

<section class="kw-feature-grid" {{ section.shopify_attributes }}>
  {%- comment -%} Full-width background image {%- endcomment -%}
  {% if section.settings.bg_image != blank %}
    <img
      src="{{ section.settings.bg_image | image_url: width: 1920 }}"
      alt=""
      class="kw-feature-grid__bg"
      loading="lazy"
    >
  {% endif %}

  <div class="kw-feature-grid__grid">
    {%- comment -%} Each card is a theme block â€” uses kw-ingredient-card snippet {%- endcomment -%}
    {% for block in section.blocks %}
      <div class="kw-feature-grid__item" {{ block.shopify_attributes }}>
        {% render 'kw-ingredient-card',
          icon: block.settings.icon,
          title: block.settings.title,
          description: block.settings.description
        %}
      </div>
    {% endfor %}
  </div>
</section>

{% schema %}
{
  "name": "KW Feature Grid",
  "tag": "section",
  "class": "kw-feature-grid-section",
  "settings": [
    {
      "type": "image_picker",
      "id": "bg_image",
      "label": "Background image"
    },
    {
      "type": "header",
      "content": "Spacing"
    },
    {
      "type": "range",
      "id": "padding_top",
      "label": "Top padding",
      "min": 0,
      "max": 100,
      "step": 4,
      "default": 60,
      "unit": "px"
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "label": "Bottom padding",
      "min": 0,
      "max": 100,
      "step": 4,
      "default": 60,
      "unit": "px"
    }
  ],
  "blocks": [
    {
      "type": "card",
      "name": "Feature Card",
      "settings": [
        {
          "type": "image_picker",
          "id": "icon",
          "label": "Icon"
        },
        {
          "type": "text",
          "id": "title",
          "label": "Title",
          "default": "Viola Verecunda"
        },
        {
          "type": "textarea",
          "id": "description",
          "label": "Description",
          "default": "Also known as hidden violet, this extract supercharges hair growth without harsh, harmful chemicals."
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "KW Feature Grid",
      "blocks": [
        {
          "type": "card",
          "settings": {
            "title": "Viola Verecunda",
            "description": "Also known as hidden violet, this extract supercharges hair growth without harsh, harmful chemicals."
          }
        },
        {
          "type": "card",
          "settings": {
            "title": "Green Tea Extract",
            "description": "Rich in antioxidants, green tea extract helps protect hair from damage by free radicals and reduces follicle inflammation."
          }
        },
        {
          "type": "card",
          "settings": {
            "title": "Grape Extract",
            "description": "Helps stimulate hair growth by enhancing scalp circulation and triggering the release of the growth factor responsible for healing."
          }
        },
        {
          "type": "card",
          "settings": {
            "title": "Gingko Biloba",
            "description": "Supports improved circulation to deliver more nutrients to each hair follicle and encourage growth"
          }
        }
      ]
    }
  ]
}
{% endschema %}
